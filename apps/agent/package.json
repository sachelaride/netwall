{
    "name": "netwall-agent",
    "version": "0.0.1",
    "main": "dist/bundle.js",
    "bin": "dist/bundle.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "build:exe": "tsc && esbuild dist/index.js --bundle --platform=node --target=node12 --outfile=dist/bundle.js --external:screenshot-desktop --external:node-windows && pkg . --output dist/bin/agent"
    },
    "pkg": {
        "scripts": [
            "dist/**/*.js"
        ],
        "assets": [
            "node_modules/screenshot-desktop/**/*",
            "../../node_modules/node-windows/bin/winsw/*"
        ],
        "targets": [
            "node18-linux-x64",
            "node12-win-x64"
        ]
    },
    "dependencies": {
        "@trpc/client": "^10.45.0",
        "@trpc/server": "^10.45.0",
        "axios": "^1.6.5",
        "cross-fetch": "^4.1.0",
        "dotenv": "^17.2.3",
        "node-windows": "^1.0.0-beta.8",
        "pkg": "^5.8.1",
        "screenshot-desktop": "^1.15.3",
        "socket.io-client": "^4.8.3",
        "systeminformation": "^5.21.22",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@netwall/server": "*",
        "@types/node": "^20.11.0",
        "@types/node-windows": "^0.1.6",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3"
    }
}
